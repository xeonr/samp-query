{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "types": [
            "node"
        ],
        "noImplicitAny": false,
        "declaration": true,
        "declarationDir": "dist",
        "noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}
